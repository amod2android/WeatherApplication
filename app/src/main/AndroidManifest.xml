<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indianic.weatherapplication">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherApplication"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.WeatherApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.weather.WeatherInfoScreen"
            android:label="@string/title_activity_weather_info_screen"
            android:theme="@style/Theme.WeatherApplication.NoActionBar" />
        <activity
            android:name=".VerifyOtpActivity"
            android:theme="@style/Theme.WeatherApplication.NoActionBar">

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".DashBoardActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WeatherApplication.NoActionBar"/>
    </application>

</manifest>